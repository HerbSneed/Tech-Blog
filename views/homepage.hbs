<div class="h-screen bg-green-100 pt-4 px-6 py-">

  {{#each posts as |post| }}

  <div class="border-2 border-emerald-700 mb-4 w-full flex-column">

    <div class="bg-emerald-700 h-12 py-2 px-4">
        <div class="">
          <h2 class="text-green-100 font-bold text-2xl">{{post.title}}</h2>
          
          {{#each users as |user|}}
          <h3 class="text-green-100 font-bold text-2xl">{{user.username}}</h3>
          {{/each}} 
        </div>
    </div>

    <div class="py-3 px-4">
      <div>
        <p>{{post.description}}</p>
      </div>
    </div>
  </div>
  {{/each}}


</div>