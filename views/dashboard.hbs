<div class="h-screen bg-green-100 pt-4 px-6 py-4 flex flex-col justify-between">

  {{#each post as |post| }}
  <div class="border-2 border-emerald-700 mb-4 w-full flex-column">

    <div class="bg-emerald-700 h-12 py-2 px-4">
        <div class="">
          <h2 class="text-green-100 font-bold text-2xl">{{post.title}}</h2>
          <h3 class="">{{post.username}}</h3>
        </div>
    </div>

    <div class="py-3 px-4">
      <div>
        <p>{{post.description}}</p>
      </div>
    </div>
  </div>
  {{/each}}

<a href="/create-new-post" class=" bg-emerald-700 float-bottom text-green-100 px-4 py-3 mb-2 mx-auto text-center rounded rounded-lg font-medium w-44">+New Post</a>

</div>

